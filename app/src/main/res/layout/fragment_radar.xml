<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radarView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar1" style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <com.ortiz.touch.TouchImageView
            android:id="@+id/Radar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/Wind_Image"
            android:layout_width="@dimen/width_wind_image"
            android:layout_height="@dimen/height_wind_image"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/Time_Create_Radar_Image"
            android:layout_below="@+id/Wind_Image"
            android:layout_width="@dimen/width_time_image"
            android:layout_height="@dimen/height_time_image"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"/>

</RelativeLayout>
